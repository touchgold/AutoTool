<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/permissionWarmTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="辅助功能未开启，请在 辅助功能->无障碍->趣头条 打开, 前往>>"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/qttIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onClick"
        android:background="@drawable/ic_launcher_qtt"
        app:layout_constraintEnd_toStartOf="@+id/dfttIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dfttIcon" />

    <ImageView
        android:id="@+id/dfttIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/ic_launch_dftt"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mizhuanIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onClick"
        android:background="@drawable/ic_launcher_mizhuan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dfttIcon"
        app:layout_constraintTop_toTopOf="@+id/dfttIcon" />


    <Button
        android:id="@+id/settingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_bg"
        android:textColor="#FFF"
        android:layout_margin="5dp"
        android:onClick="onClick"
        android:visibility="gone"
        android:text="设置权限"/>
    <Button
        android:id="@+id/qiandaoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:textColor="#FFF"
        android:layout_margin="5dp"
        android:onClick="onClick"
        android:visibility="gone"
        android:text="签到任务"/>
    <Button
        android:id="@+id/shiwanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:textColor="#FFF"
        android:layout_margin="5dp"
        android:onClick="onClick"
        android:visibility="gone"
        android:text="试玩任务"/>

    <Button
        android:id="@+id/flowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:textColor="#FFF"
        android:layout_margin="5dp"
        android:onClick="onClick"
        android:visibility="gone"
        android:text="评论"
        />

    <Button
        android:id="@+id/testBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg2"
        android:textColor="#FFF"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:onClick="onClick"
        android:text="设置允许后台"/>


    <Switch
        android:id="@+id/switchAllTaskBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="172dp"
        android:gravity="end"
        android:showText="true"
        android:textOff="off"
        android:textOn="on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="224dp"
        android:text="注：\n魅族手机需要在 手机管家->权限管理->后台管理->AutoTool 勾选允许后台允许. \n"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/yaoqingmaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="趣头条邀请码: A220137685"
        android:textColor="#0826e9"
        android:textIsSelectable="true"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/miCodeTv"
        app:layout_constraintTop_toBottomOf="@+id/tip" />

    <TextView
        android:id="@+id/miCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="米赚邀请码: 300362641"
        android:textColor="#0826e9"
        android:textIsSelectable="true"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yaoqingmaTv" />


    <TextView
        android:id="@+id/dongfangCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="东方头条邀请码: 028514563"
        android:textColor="#0826e9"
        android:textIsSelectable="true"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/miCodeTv"
        app:layout_constraintTop_toBottomOf="@+id/miCodeTv" />

</android.support.constraint.ConstraintLayout>
